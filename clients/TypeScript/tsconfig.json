{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
